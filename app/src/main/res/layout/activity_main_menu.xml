<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/pfhbipm_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="dodaj użytkownika"
            android:id="@+id/main_menu_dodaj_uzytk"
            android:autoSizeTextType="uniform"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="dodaj urządzenie"
            android:id="@+id/main_menu_dodaj_urzadz"
            android:autoSizeTextType="uniform"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="przeglądaj użytkowników"
            android:id="@+id/main_menu_przegl_uzytk"
            android:autoSizeTextType="uniform"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:text="przeglądaj urządzenia"
            android:id="@+id/main_menu_przegl_urzadz"
            android:autoSizeTextType="uniform"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>